{% extends 'base.html.twig' %}

{% block title %}Nouveau libellé{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Créer un nouveau libellé de mesure</h1>


            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <div class="mb-3">
                    {{ form_label(form.libelle, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.libelle) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.unite, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.unite, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.unite) }}
                </div>

                <div class="form-group">
                    <a href="{{ path('libelle_mesures_index') }}" class="btn btn-secondary">Retour</a>
                    {{ form_widget(form.Enregistrer, {'attr': {'class': 'btn btn-success'}}) }}
                </div>

                {{ form_end(form) }}
            </div>
    </div>
{% endblock %}
